<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/santai"
    android:orientation="vertical"
    tools:context="MainActivity">
    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Kedai Santai"
        android:textColor="@android:color/holo_orange_dark"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/bt_fbanalytics"
        android:text="Tambah Daftar Makananan"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_fbauth"
        android:text="Daftar Menu Makanan"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_minuman"
        android:text="Daftar Minuman"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_pesan"
        android:text="Lihat Pemesanan"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_height="wrap_content" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">

    </com.google.android.gms.ads.AdView>

</LinearLayout>