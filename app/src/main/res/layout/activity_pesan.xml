<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/jus"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:padding="10dp"
        card_view:cardBackgroundColor="@color/background_material_light"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2.5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="Buat Pesanan"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_nobarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="No.Meja"
                        android:textColor="@android:color/holo_orange_dark"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_namabarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Makanan/Minuman"
                        android:textColor="@android:color/holo_orange_dark"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_hargabarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Harga Makanan/Minuman"
                        android:textColor="@android:color/holo_orange_dark"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_totalbarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Porsi"
                        android:textColor="@android:color/holo_orange_dark"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_totalharga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Uang Bayar"
                        android:textColor="@android:color/holo_orange_dark"
                        android:inputType="number" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga "
                        android:textColor="@android:color/holo_orange_dark"
                        android:id="@+id/totalbelanja"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uang Kembali "
                        android:textColor="@android:color/holo_orange_dark"
                        android:id="@+id/uangkembali"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keterangan "
                        android:textColor="@android:color/holo_orange_dark"
                        android:id="@+id/keterangan"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginBottom="8dp"/>

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tombol1"
                    android:text="BAYAR"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/bt_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_orange_dark"
                    android:text="PESAN" />


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>


</LinearLayout>